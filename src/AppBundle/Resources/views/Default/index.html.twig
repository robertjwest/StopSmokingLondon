{% extends '@App/base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets 
    '@AppBundle/Resources/assets/local/scss/index.scss'
    filter='?uglifycss'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts
    '@AppBundle/Resources/assets/local/js/index.js'
    filter='?uglifyjs2' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}

{% block page_content %}
  {{ parent() }}
  <div class="container-fluid h-100">
    <div class="column">
      <div class="row home-feature justify-content-center col-auto">
        <div class="col-lg-10 align-self-center">
          <h3 class="welcome">
            <span class="small">Welcome to</span><br />
            Stop Smoking London
          </h3>
        </div>
      </div>
      <div class="row home-bottom justify-content-center">
        <div class="col-lg-11">
          <div class="row h-100 triples-row gutter-lg">
            <div class="home-right-bg"></div>
            {% include '@App/Default/_home_cta_buttons.html' %}
            <div class="col-12 col-lg-auto">
              <ul class="fact-list">
                <li>
                  <img src="{{ asset('bundles/app/images/icon/map_london.png') }}" alt="Smokers in london with pie chart effect over London outline" class="fact-icon map" />
                  <span class="fact">1.3 million out of 8 million<br />Londoners still smoke</span>
                </li>
                <li>
                  <img src="{{ asset('bundles/app/images/icon/stop.png') }}" alt="Stop sign - most smokers want to stop" class="fact-icon stop" />
                  <span class="fact">Most want to stop</span>
                </li>
                <li>
                  <img src="{{ asset('bundles/app/images/icon/stop_smoking.png') }}" alt="Stop smoking icon" class="fact-icon stop-smoking" />
                  <span class="fact">Stop Smoking London<br />aims to help with that</span>
                </li>
              </ul>
            </div>
            <div class="col-lg news-col">
              <div class="h4-outer">
                <h4 class="news-header">
                  Latest news
                </h4>
                <a href="https://twitter.com/stopsmokinglon" class="twitter-profile-link" target="_blank">
                  <div class="media">
                    <div class="d-flex mr-1 align-self-center icon"></div>
                    <div class="media-body align-self-center">@StopSmokingLon</div>
                  </div>
                </a>
              </div>
              <div class="carousel-container" id="carouselContainer">
                
              </div>
            </div>
            {% include '@App/Default/_home_cta_buttons.html' %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}