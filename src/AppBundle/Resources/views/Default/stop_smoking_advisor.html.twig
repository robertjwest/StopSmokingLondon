{% extends '@App/base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets 
    '@AppBundle/Resources/assets/global/GoogleMap/GoogleMap.scss'
    filter='?uglifycss'
     %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key={{ google_map_api }}&callback=GoogleMap.init">
    </script>
  {% javascripts
    '@AppBundle/Resources/assets/global/GoogleMap/GoogleMap.js'
    filter='?uglifyjs2' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}

{% block page_content %}
  <div class="container-fluid h-100">
    <div class="row bg-primary text-white justify-content-center">
      <div class="col-lg-10 jumbotron jumbotron-fluid bg-primary">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/stop-smoking">I want to stop smkoking</a></li>
          <li class="breadcrumb-item active">Book appointment</li>
        </ol>
        <a href="/" class="home-link">Home</a>
        <h2>You are making an appointment<br />with an advisor</h2>
      </div>
    </div>
    <div class="google-map" id="map"></div>
  </div>
{% endblock %}